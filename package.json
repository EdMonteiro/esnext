{
  "name": "esnext",
  "version": "1.0.0",
  "description": "Update your project to the latest ECMAScript syntax.",
  "main": "lib/esnext.js",
  "jsnext:main": "src/esnext.js",
  "bin": {
    "esnext": "./bin/index.js"
  },
  "scripts": {
    "test": "mocha --compilers js:babel/register",
    "prepublish": "rm -rf lib && babel -b es6.classes -d lib src"
  },
  "keywords": [
    "es6",
    "es7",
    "ast"
  ],
  "files": [
    "lib",
    "src",
    "bin"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "author": "Brian Donovan",
  "license": "MIT",
  "dependencies": {
    "escope": "^3.2.0",
    "espree": "^2.2.5",
    "estraverse": "^4.1.1",
    "magic-string": "^0.8.0",
    "mkdirp": "^0.5.1",
    "shebang-regex": "^1.0.0",
    "strip-indent": "^1.0.1"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "mocha": "^2.3.3",
    "rollup": "^0.20.5",
    "rollup-plugin-babel": "^1.0.0",
    "rollup-plugin-commonjs": "^1.2.0",
    "rollup-plugin-json": "^2.0.0",
    "rollup-plugin-npm": "^1.0.0"
  }
}
